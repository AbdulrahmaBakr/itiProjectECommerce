<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".registerFrag">

    <ImageView
        android:id="@+id/logo_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/applogo"
        />

    <EditText
        android:id="@+id/name_register"
        android:textStyle="bold"
        android:layout_width="396dp"
        android:layout_height="75dp"
        android:layout_below="@+id/logo_app"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/desgin"
        android:hint="User Name "
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/phone_register"
        android:textStyle="bold"
        android:layout_width="396dp"
        android:layout_height="75dp"
        android:layout_below="@+id/name_register"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/desgin"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/password_register"
        android:layout_width="396dp"
        android:layout_height="75dp"
        android:layout_below="@+id/phone_register"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/desgin"
        android:hint="Password"
        android:inputType="numberPassword"
        android:padding="20dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/password_register"
        android:layout_margin="15dp"
        android:background="@drawable/btn_style"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="23dp"
        android:textColor="#FFFFFF"
        />




</RelativeLayout>