<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login"
    tools:context=".loginFrag">

    <ImageView
        android:id="@+id/logo_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/applogo"
        />

    <EditText
        android:id="@+id/phone_login"
        android:textStyle="bold"
        android:layout_width="396dp"
        android:layout_height="75dp"
        android:layout_below="@+id/logo_app"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/desgin"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="396dp"
        android:layout_height="75dp"
        android:layout_below="@+id/phone_login"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/desgin"
        android:hint="Password"
        android:inputType="numberPassword"
        android:padding="20dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linerarLayout"
        android:layout_marginTop="15dp"
        android:layout_below="@id/password_login"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <CheckBox
            app:buttonTint="@color/colorPrimary"
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cbd_strokeColor="@color/colorPrimary"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="18dp"
            style="@style/Material.Drawable.CheckBox"
            android:textColor="@color/colorPrimary"
            android:text="Remember me" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="15dp"
android:id="@+id/forget"
            android:text="forget password ?"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            />

    </LinearLayout>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
      android:layout_below="@id/linerarLayout"
        android:layout_margin="15dp"
        android:background="@drawable/btn_style"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="23dp"
        android:textColor="#FFFFFF"
        />

    <TextView

        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn"
        android:layout_marginLeft="180dp"



        android:layout_marginRight="15dp"
        android:text="Admin"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

</RelativeLayout>